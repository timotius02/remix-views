generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Video {
  id String @id
  lastUpdated DateTime @updatedAt
  title String
  viewCount String // Viewcount is string bc Youtube API returns string and I don't want to deal with BIGINTs
  thumbnail String
  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  playlistId String

  @@index([playlistId])
}

model Playlist {
  id String @id   // UUID; we don't use Youtube's ID to allow User generated playlist (possibly?)
  youtubeId String?
  name String
  createdAt DateTime
  thumbnail String
  type PLAYLIST_TYPE
  videos Video[]
  plays Int @default(0) // Number of times this playlist has been played

  @@fulltext([name])
}

enum PLAYLIST_TYPE {
  PLAYLIST
  CHANNEL
}